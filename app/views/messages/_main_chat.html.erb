<div class="finish-room">
  <div class="left-header">
    <div class="header-title">hogefuga</div>
  </div>
  <div class="right-header">
    <div class="finish-btn">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>
<div class="chat-main">
  
  <div class="message">
    <div class="message-date">
      <div class="message-name">Tom</div>
      <div class="date">2020/3/31(Wed) 12:43:30</div>
    </div>
    <div class="content">おはよう</div>
  </div>
  <div class="message">
    <div class="message-date">
      <div class="message-name">Sim</div>
      <div class="date">2020/3/31(Wed) 12:43:30</div>
    </div>
    <div class="content">こんにちは</div>
  </div>
</div>
<%= form_with model: [@room, @message], class: 'text', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>